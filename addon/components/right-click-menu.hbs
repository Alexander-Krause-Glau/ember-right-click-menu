{{#if @items}}
  <span id={{concat "tether-for-" this.popperId}}></span>
  <EmberWormhole @to="ember-right-click-menu-wormhole">
    <ItemList
      id={{concat 'popper-for-' this.popperId}}
      class="ember-right-click-menu"
      @items={{@items}}
      @closeContextMenu={{this.closeContextMenu}}
      @hasBlock={{has-block}}
      {{did-insert this.addContextMenuListeners}}
      as |item|
    >
      {{yield item}}
    </ItemList>
  </EmberWormhole>
{{/if}}
